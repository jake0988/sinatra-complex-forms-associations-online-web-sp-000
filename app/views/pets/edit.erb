<h1>Update Pet</h1>

<h2>Edits for <%= @pet.name %></h2>
<form action-"/pets/<%=@pet.id%>"
method="POST">
<input id="hidden" type="hidden name="_method" value="patch">
<label>Edit the Pet's Name:</label>
<br>
<input type="text" name="pet[name]" value="<%@pet.name%>" id ="pet_name">

<br>
<p>Select an exitsting owner or create a new one below.</p>

<h3>Existing Owner</h3>
<% @owners.each do |owners| %>
<input type="radio" name= "pet[owner_id]" id="<% owners.id%>" 
value="<%= owners.id%>" <%='checked' if owners.id == @pet.owner.id %>><%=owners.name%>"</input><br>
<% end %>

<h3>New Owner</h3>
<label>Owner name: </label>
<br>
<input type="text" name="owner[name]" id="owner_name"></input>
<br>

<input type="submit" value="Update Pet">
</form>